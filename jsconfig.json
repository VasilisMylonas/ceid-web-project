{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "baseUrl": "./",
        "paths": {
            "@models/*": ["src/models/*"],
            "@controllers/*": ["src/controllers/*"],
            "@routes/*": ["src/routes/*"],
            "@middleware/*": ["src/middleware/*"]
        },
        "typeRoots": ["node_modules/@types"],
        "strictNullChecks": true,
        "strictFunctionTypes": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}
