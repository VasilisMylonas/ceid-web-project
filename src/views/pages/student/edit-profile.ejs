<div class="container-fluid py-4" style="max-width: 800px;">
  <h2 class="mb-4">Επεξεργασία Προφίλ</h2>

  <!-- Card for static student info -->
  <div class="card shadow-sm mb-4">
    <div class="card-header">
      <h5 class="mb-0">Βασικά Στοιχεία</h5>
    </div>
    <div class="card-body">
      <ul class="list-group list-group-flush">
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span>Όνομα:</span>
          <strong id="student-name"></strong>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span>Επώνυμο:</span>
          <strong id="student-surname"></strong>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span>Αριθμός Μητρώου:</span>
          <strong id="student-id"></strong>
        </li>
      </ul>
    </div>
  </div>

  <div class="card shadow-sm">
    <div class="card-header">
      <h5 class="mb-0">Στοιχεία Επικοινωνίας</h5>
    </div>
    <div class="card-body">
      <form id="profile-form">
        <div class="mb-3">
          <label for="address" class="form-label">Πλήρης Ταχυδρομική Διεύθυνση</label>
          <div class="input-group">
            <input type="text" class="form-control" id="address" readonly>
            <button class="btn btn-outline-secondary edit-btn" type="button" data-target="address">
              <i class="bi bi-pencil"></i>
            </button>
          </div>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email Επικοινωνίας</label>
          <div class="input-group">
            <input type="email" class="form-control" id="email" readonly>
            <button class="btn btn-outline-secondary edit-btn" type="button" data-target="email">
              <i class="bi bi-pencil"></i>
            </button>
          </div>
        </div>
        <div class="mb-3">
          <label for="mobilePhone" class="form-label">Κινητό Τηλέφωνο</label>
          <div class="input-group">
            <input type="tel" class="form-control" id="mobilePhone" readonly>
            <button class="btn btn-outline-secondary edit-btn" type="button" data-target="mobilePhone">
              <i class="bi bi-pencil"></i>
            </button>
          </div>
        </div>
        <div class="mb-3">
          <label for="homePhone" class="form-label">Σταθερό Τηλέφωνο</label>
          <div class="input-group">
            <input type="tel" class="form-control" id="homePhone" readonly>
            <button class="btn btn-outline-secondary edit-btn" type="button" data-target="homePhone">
              <i class="bi bi-pencil"></i>
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<script src="/js/pages/student/edit-profile.js"></script>